<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.adminOrderMapper">
    <insert id="addTable">
        insert into tableInfo (restID,tableID,tableLimit,tableUse,tableType,tableStatus) values (#{restID},#{tableID},
        #{tableLimit},'0',#{tableType},'0')
    </insert>

    <update id="editTable">
        update tableInfo set tableID = #{tableID},tableLimit = #{tableLimit},tableType = #{tableType} where ID = #{id}
    </update>

    <delete id="deleteTable">
        delete from tableInfo where ID = #{ID}
    </delete>
</mapper>
