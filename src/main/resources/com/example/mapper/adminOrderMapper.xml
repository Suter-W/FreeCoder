<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.adminOrderMapper">
    <insert id="addTable">
        insert into table_info (restID,tableName,tableLimit,tableUse,tableType,tableStatus) values (#{restID},#{tableName},
        #{tableLimit},'0',#{tableType},'0')
    </insert>

    <update id="editTable">
        update table_Info set tableName = #{tableName},tableLimit = #{tableLimit},tableType = #{tableType} where tableID = #{tableID}
    </update>

    <delete id="deleteTable">
        delete from table_Info where tableID = #{tableID}
    </delete>
</mapper>
